        <filterFormula>/* the flow should never run when the account is blocked */
AND ({!$Record.Account.Blocked__c} = false,
{!$Record.Name} != &apos;TestDataFactoryTestOpportunity12345&apos;,
/*the flow should run for one of these conditions */
OR(
/* Bergen opportunity is not closed */
AND({!$Record.IsClosed} = False, ISPICKVAL({!$Record.Region__c},&apos;Bergen&apos;)), 
/*Opp is new */
ISNEW(), 
/* The Eur_Rate is blank */
ISNULL({!$Record.EUR_Rate__c}), 
/* is changed : consultants, months, dps owner (is changed to another user), OR amount */
