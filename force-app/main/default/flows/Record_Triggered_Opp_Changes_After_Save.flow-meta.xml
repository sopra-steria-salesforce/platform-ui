ISCHANGED({!$Record.Months__c}),
ISCHANGED({!$Record.Amount}),
(ISCHANGED({!$Record.DPS_Business_Owner__c})
&amp;&amp; ISNULL({!$Record.DPS_Business_Owner__c})=FALSE),
/*BU Lead should be set if there is only 1 business lead. */
ISCHANGED({!$Record.Business_Unit_Count__c})

))</filterFormula>
